<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wideweb.mozarttest"
    android:versionCode="3"
    android:versionName="0.5.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.wideweb.mozarttest.ProductViewActivity"
            android:parentActivityName="com.wideweb.mozarttest.GridActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wideweb.mozarttest.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.wideweb.mozarttest.CollectionActivity" >
        </activity>
        <activity
            android:name="com.wideweb.mozarttest.GridActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wideweb.mozarttest.NavigationActivity" >
        </activity>
        <activity
            android:name="com.wideweb.mozarttest.FullImageActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>